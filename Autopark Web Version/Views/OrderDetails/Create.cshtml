@model Autopark_Web_Version.Models.Models.OrderDetails

@{
    ViewData["Title"] = "New Order";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="OrderDetails">
    <div>        
        <div class="form-group">            
            <input type="hidden" asp-for="OrderId" value=@ViewBag.Order.OrderId class="form-control  form-control-sm" />
        </div>
        <div class="form-group">           
            <input type="hidden" asp-for="VenicleId" value=@ViewBag.Order.VenicleId class="form-control  form-control-sm" />
        </div>
        <div class="form-group">
            <label asp-for="DetailId"></label>
            <select class="form-control" asp-for="DetailId">
                @foreach (var item in ViewBag.Details)
                {
                    <option value=@item.DetailId>@item.DetailName</option>
                }
            </select>
        </div>
        <div class="form-group">
            <label asp-for="Quantity"></label>
            <input asp-for="Quantity" class="form-control  form-control-sm" />
        </div>

        <div class="form-group">
            <input type="submit" value="Save" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Orders" asp-action="Index">Back</a>
</div>
