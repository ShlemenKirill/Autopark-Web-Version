@model IEnumerable<Autopark_Web_Version.Models.Models.VVEnicles>
@{
    ViewData["Title"] = "AutoPark";
    ViewData["Type"] = null;
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="Venicle" asp-action="Create">Add</a>
</p>
<table class="table">
    <tr>
        <th><a>Venicle ID</a></th>
        <th>@Html.ActionLink("VenicleType", "Index", new { sortingParameter = ViewBag.VenicleTypeSortParam })</th>
        <th><a>Engine</a></th>
        <th>@Html.ActionLink("ModelName", "Index", new { sortingParameter = ViewBag.ModelNameSortParam })</th>
        <th><a>RegistrationNumber</a></th>
        <th><a>Weight</a></th>
        <th><a>Year</a></th>
        <th><a>Color</a></th>
        <th>@Html.ActionLink("Mileage", "Index", new { sortingParameter = ViewBag.MileageSortParam })</th>
        <th><a>Tank</a></th>
        <th><a>Consumption</a></th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>@item.VenicleId</td>
            <td>@item.VenicleType</td>
            <td>@item.Engine</td>
            <td>@item.ModelName</td>
            <td>@item.RegistrationNumber</td>
            <td>@item.Weight</td>
            <td>@item.Year</td>
            <td>@item.Color</td>
            <td>@item.Mileage</td>
            <td>@item.Tank</td>
            <td>@item.Consumption</td>

            <td>
                <a asp-controller="Venicle" asp-action="Edit" asp-route-id="@item.VenicleId">Change</a> |
                <a asp-controller="Venicle" asp-action="Delete" asp-route-id="@item.VenicleId">Delete</a>
                <a asp-controller="Venicle" asp-action="Details" asp-route-id="@item.VenicleId">Details</a>
            </td>
        </tr>
    }
</table>
