@model Autopark_Web_Version.Models.Details
@{
    ViewData["Title"] = "Edit detail";
}
<h2>@ViewData["Title"].</h2>

<form asp-action="Edit" asp-controller="Details">
    <div>
        <input type="hidden" asp-for="DetailId" />
        <div class="form-group">
            <label asp-for="DetailName"></label>
            <input type="text" asp-for="DetailName" class="form-control form-control-sm" />
        </div>
        
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Details" asp-action="Index">Back</a>
</div>
