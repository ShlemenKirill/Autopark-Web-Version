@model Autopark_Web_Version.Models.Details
@{
    ViewData["Title"] = "Delete Detail";
}
<div>
    <dl class="dl-horizontal">
        <dt>DetailId</dt>
        <dd>
            @Model.DetailId
        </dd>        

        <dt>Detail Name</dt>
        <dd>
            @Model.DetailName
        </dd>
    </dl>

    <div>
        <form asp-controller="Details" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Delete" />
            </div>
        </form>
    </div>
</div>