@model IEnumerable<Autopark_Web_Version.Models.Details>

@{
    ViewData["Title"] = "AutoPark";
    ViewData["Type"] = null;
}
<h2>@ViewData["Title"]</h2>
<p>
    <a asp-controller="Details" asp-action="Create">Add</a>
</p>
<table class="table">
    <tr>
        <th><a>DetailId</a></th>
        <th><a>Detail Name</a></th>       
        <th></th>
    </tr>

    @foreach (var item in Model)
    {  
        <tr>
            <td>@item.DetailId</td>            
            <td>@item.DetailName</td>

            <td>
                <a asp-controller="Details" asp-action="Edit" asp-route-id="@item.DetailId">Change</a> |
                <a asp-controller="Details" asp-action="Delete" asp-route-id="@item.DetailId">Delete</a>
                <a asp-controller="Details" asp-action="Details" asp-route-id="@item.DetailId">Details</a>
            </td>
        </tr>
    }
</table>
