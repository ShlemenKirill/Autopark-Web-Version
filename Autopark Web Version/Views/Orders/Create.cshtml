@model Autopark_Web_Version.Models.Models.Orders

@{
    
    ViewData["Title"] = "New Order";
}
<h2>@ViewData["Title"]</h2>

<form asp-action="Create" asp-controller="Orders">    
   
    <div>
        <div class="form-group">
            <label asp-for="VenicleId">Venicle Name</label>
            <select class="form-control" asp-for="VenicleId">
                @foreach (var item in ViewBag.Venicles)
                {                    
                    <option value=@item.VenicleId>@item.ModelName @item.RegistrationNumber</option>
                }                
            </select>
        </div>        
        <div class="form-group">
            <label asp-for="Date">Date of Order</label>
            <input asp-for="Date" class="form-control  form-control-sm" />
        </div>

        <div class="form-group">
            <input type="submit" value="Add order" class="btn btn-outline-secondary" />
        </div>
    </div>
</form>

<div>
    <a asp-controller="Orders" asp-action="Index">Back</a>
</div>
